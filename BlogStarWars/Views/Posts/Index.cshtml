@model BlogStarWars.Models.ViewModels.PostFormViewModel

@{
    ViewData["Title"] = "Posts";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create now</a>
</p>

<div class="painel panel-success">
    <div class="panel-heading">Last posts</div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Post.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Post.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Post.QuantLikes)
                    </th>
                    <th>
                        %
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Post.QuantViews)
                    </th>
                    <th>
                        %
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Posts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantLikes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PercLikesTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantViews)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PercViewsTotal)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <p class="text-success">Total Likes: @Html.DisplayFor(model => model.TotalLikes)</p>
        <p class="text-success">Total Views:@Html.DisplayFor(model => model.TotalViews)</p>
    </div>
</div>

